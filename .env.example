# ─────────────────────────────────────────────────────────────────────────────
# Agent Framework – Environment Variables
# ─────────────────────────────────────────────────────────────────────────────
# Copy this file to .env and fill in your values.
# Lines starting with # are comments and ignored.

# ── LLM ──────────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-...

# ── PostgreSQL (long-term memory + server data) ─────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/agentdb

# ── Redis (short-term / session memory) ─────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_TTL=3600          # seconds (default: 1 hour)

# ── Session Management ──────────────────────────────────────────────────────
SESSION_MAX_MESSAGES=200        # max messages per Redis session
SESSION_AUTO_CHECKPOINT=50      # flush to Postgres every N new messages (0=off)
# ── Spotify API (Web Playback SDK for full track playback) ─────────────────
SPOTIFY_CLIENT_ID=              # Get from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_SECRET=          # Get from your Spotify app settings
SPOTIFY_REDIRECT_URI=http://localhost:8001/auth/spotify/callback